@model List<WebApplication1.Models.Photo>
@using WebApplication1.Models
<h2>Lista zdjęć</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(m => m[0].DateTaken)</th>
            <th>@Html.DisplayNameFor(m => m[0].Description)</th>
            <th>@Html.DisplayNameFor(m => m[0].Camera)</th>
            <th>@Html.DisplayNameFor(m => m[0].Author)</th>
            <th>@Html.DisplayNameFor(m => m[0].Resolution)</th>
            <th>@Html.DisplayNameFor(m => m[0].Format)</th>
            <th>Akcje</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DateTaken</td>
                <td>@item.Description</td>
                <td>@item.Camera</td>
                <td>@item.Author</td>
                <td>@item.Resolution</td>
                <td>@item.Format.GetDisplayName()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>  
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>Brak zdjęć.</p>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj zdjęcie</a>
</p>