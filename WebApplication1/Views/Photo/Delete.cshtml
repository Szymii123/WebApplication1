@using WebApplication1.Models
@model Photo

@{
    ViewBag.Title = "Usuń zdjęcie";
    Layout = "_Layout";
}

<h2>Usuń zdjęcie</h2>

<h4>Czy na pewno chcesz usunąć to zdjęcie?</h4>

<table class="table">
    <tr><th>Id</th><td>@Model.Id</td></tr>
    <tr><th>Data</th><td>@Model.Data.ToShortDateString()</td></tr>
    <tr><th>Godzina</th><td>@Model.Hour</td></tr>
    <tr><th>Autor</th><td>@Model.Author</td></tr>
    <tr><th>Aparat</th><td>@Model.Camera</td></tr>
    <tr><th>Opis</th><td>@Model.Description</td></tr>
    <tr><th>Rozdzielczość</th><td>@Model.Resolution</td></tr>
    <tr><th>Format</th><td>@Model.Format</td></tr>
</table>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />

    <button type="submit" class="btn btn-danger">Usuń</button>
    <a class="btn btn-secondary" asp-action="Index">Anuluj</a>
</form>