@model WebApplication1.Models.Photo
@using WebApplication1.Models

<h2>Dodaj zdjÄ™cie</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DateTaken"></label>
        <input asp-for="DateTaken" class="form-control" />
        <span asp-validation-for="DateTaken" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Camera"></label>
        <input asp-for="Camera" class="form-control" />
        <span asp-validation-for="Camera" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Resolution"></label>
        <input asp-for="Resolution" class="form-control" />
        <span asp-validation-for="Resolution" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Format"></label>
        <select class="form-control"
                asp-for="Format"
                asp-items="@Html.GetEnumSelectList<PhotoFormat>()"></select>
        <span asp-validation-for="Format" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>